# Chave de autenticação da API (use no header 'apikey' do frontend)
API_KEY=minha_chave_secreta

# Nome da instância (deve bater com INSTANCE no frontend)
INSTANCE_NAME=CentroSocial

# Porta do servidor
PORT=3333

# Delay em ms entre cada mensagem enviada (evita bloqueio do WhatsApp)
MESSAGE_DELAY_MS=2000

# DDI padrão para números sem código de país
DEFAULT_COUNTRY_CODE=55

# CORS origin (use * para liberar tudo, ou coloque sua URL do GitHub Pages)
CORS_ORIGIN=*

# Rate limit: max requisições por minuto por IP no endpoint de envio
RATE_LIMIT_MAX=30
